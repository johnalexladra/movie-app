// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String @unique
  password  String
  name      String?
  role      String?
  
  movies    Movie[]
  favorite  Favorite[]

  @@map("users")
}

model Favorite {
  // id        Int @id @default(autoincrement())
  id        Int @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  backdrop_path  String?
  homepage       String?
  // movieId        Int     @unique
  original_title String?
  popularity     Decimal @db.Decimal(10,3)
  poster_path    String?
  title          String?
  name           String?
  media_type     String?
  vote_average   Decimal @db.Decimal(10,3)
  vote_count     Int

  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("favorite")
}

model Movie {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  overview    String?
  homepage    String
  imgUrl      String
  genre       String

  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("movies")
}
