{
  "name": "movie-app",
  "version": "1.0.0",
  "description": "Simple movie application directory using MERN (NestJS as Backend & NextJS as Frontend)",
  "main": "index.js",
  "scripts": {
    "prisma:dev:migrate": "npm run prisma:dev:migrate --prefix backend",
    "prisma:dev:deploy": "npm run prisma:dev:deploy --prefix backend",
    "dev-server": "npm run start:dev --prefix backend",
    "dev-client": "npm run dev --prefix frontend",
    "start-server": "npm run start --prefix backend",
    "start-client": "npm run start --prefix backend",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "install-all": "npm install && npm install --prefix frontend && npm install --prefix backend",
    "build": "npm install --prefix frontend && npm run build --prefix frontend && npm install --prefix backend",
    "start": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "test": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnalexladra/movie-app.git"
  },
  "keywords": [
    "full-stack",
    "mern",
    "react",
    "prisma",
    "argon",
    "jwt",
    "passport",
    "typescript",
    "postgresql",
    "nestjs",
    "and",
    "nextjs"
  ],
  "author": "John Alex",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/johnalexladra/movie-app/issues"
  },
  "homepage": "https://github.com/johnalexladra/movie-app#readme",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
